                        statusList.Remove(Model.Status.First(s => s.Name == "Целевик"));
                    }
                }

                @Html.DropDownListFor(x => x.StatusSelectId, new SelectList(statusList, "Id", "Name", Model.StatusSelectId), new { @class = "form-control", required = "" })
