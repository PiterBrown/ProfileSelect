@model ProfileSelect.ViewModels.StatusViewModel
@{
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    ViewBag.Title = "Редактировать статус";
}

@using (Html.BeginForm("Edit", "Status", new { Area = "Admin" }, FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(x => x.Id)
    <div class="form-group">
        <label class="control-label col-md-2">Название</label>
        <div class="col-md-4">
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary pull-left" value="Сохранить" />
        </div>
    </div>
}
